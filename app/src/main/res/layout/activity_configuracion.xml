<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfiguracionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollconf"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/containerL"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Información"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/birthdayConf"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="18 de Oct. 1992"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/yearConf"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="22 años"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/signozConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Libra"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/signocConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="Cabra (horóscopo Chino)"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/daysToBirthConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:text="En 122, caerá Martes"
                android:textColor="#000"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Datos Personales"
                android:textColor="#000"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageUserConf"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/usuario_register" />

                <ImageView
                    android:id="@+id/showManageConf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/imageUserConf"
                    android:layout_alignBottom="@+id/imageUserConf"
                    android:background="@drawable/circle_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@mipmap/ic_camera" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#737373"
                        android:layout_height="wrap_content"
                        android:text="Nombres"
                        android:layout_marginStart="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/namesConf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:layout_marginStart="20dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="#737373"
                        android:text="Apellidos"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/surnamesConf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="#000"
                        android:maxLines="1"
                        android:layout_marginStart="20dp"
                        android:singleLine="true"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha Nacimiento"
                        android:textSize="15sp"
                        android:textColor="#737373"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/showDatePickerConf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/privateYearConf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Hacer privado el año"
                            android:textColor="#000"
                            android:textSize="13dp"
                            android:id="@+id/check_textConf"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:layout_marginStart="20dp"
                        android:textSize="15sp"
                        android:textColor="#737373"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phonenumberConf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+51943856850"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="#737373"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radiuscontainer"
                android:paddingStart="20dp"
                android:id="@+id/buttonGuardar"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Guardar Cambios"
                android:textColor="#FFF" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiuscontainer_red"
                android:paddingStart="20dp"
                android:id="@+id/buttonEliminar"
                android:paddingEnd="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:text="  Eliminar cuenta "
                android:textColor="#FFF" />

        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/managePhotoConf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/menuPhotoConf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/menu_manage_photo" />
    </RelativeLayout>
</RelativeLayout>